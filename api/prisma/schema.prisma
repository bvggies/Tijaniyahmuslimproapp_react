generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
  SCHOLAR
  SUPPORT
  VIEWER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  avatarUrl    String?
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  posts        CommunityPost[]
  comments     CommunityComment[]
  likes        CommunityLike[]
  journals     JournalEntry[]
  conversations Conversation[] @relation("ConversationParticipants")
  sentMessages Message[]
  
  // Notification relations
  actorNotifications     Notification[]          @relation("NotificationActor")
  notificationRecipients NotificationRecipient[]
  deviceTokens           DeviceToken[]
  notificationPreference NotificationPreference?
  
  // Quran relations
  quranBookmarks         QuranBookmark[]
  quranLastRead          QuranLastRead?
  quranPreferences       QuranReadingPreferences?
}

model CommunityPost {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content    String
  mediaUrls  String[] @default([])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  comments   CommunityComment[]
  likes      CommunityLike[]

  @@index([createdAt])
}

model CommunityComment {
  id        String   @id @default(cuid())
  postId    String
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String
  createdAt DateTime @default(now())

  @@index([postId, createdAt])
}

model CommunityLike {
  id        String   @id @default(cuid())
  postId    String
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@unique([postId, userId])
}

model JournalEntry {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  content   String
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
}

model Conversation {
  id        String   @id @default(cuid())
  participants User[] @relation("ConversationParticipants")
  messages  Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
  content        String
  messageType    String       @default("text") // text, image, file
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

// ==========================================
// NOTIFICATION SYSTEM
// ==========================================

enum NotificationType {
  REMINDER
  MESSAGE
  COMMENT
  LIKE
  SYSTEM
  EVENT
  CAMPAIGN
}

enum NotificationStatus {
  UNREAD
  READ
  ARCHIVED
}

enum DevicePlatform {
  ios
  android
  web
}

model Notification {
  id          String           @id @default(cuid())
  type        NotificationType
  title       String
  body        String
  deepLink    String?          // e.g., "tijaniyah://posts/123" or "/posts/123"
  
  // Actor who triggered the notification (nullable for system notifications)
  actorUserId String?
  actor       User?            @relation("NotificationActor", fields: [actorUserId], references: [id], onDelete: SetNull)
  
  // Related entity
  entityType  String?          // post, comment, message, event, prayer, wazifa
  entityId    String?
  
  // Metadata for additional context (JSON)
  metadata    Json?
  
  createdAt   DateTime         @default(now())
  
  recipients  NotificationRecipient[]

  @@index([createdAt])
  @@index([type])
  @@index([entityType, entityId])
}

model NotificationRecipient {
  id             String             @id @default(cuid())
  notificationId String
  notification   Notification       @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  userId         String
  user           User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  status         NotificationStatus @default(UNREAD)
  readAt         DateTime?
  pushSentAt     DateTime?          // When push notification was sent
  pushError      String?            // Error message if push failed
  createdAt      DateTime           @default(now())

  @@unique([notificationId, userId])
  @@index([userId, status])
  @@index([userId, createdAt])
}

model DeviceToken {
  id            String         @id @default(cuid())
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  expoPushToken String         @unique
  platform      DevicePlatform
  deviceName    String?
  isActive      Boolean        @default(true)
  lastSeenAt    DateTime       @default(now())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([userId])
  @@index([expoPushToken])
}

model NotificationPreference {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Master toggle
  pushEnabled     Boolean  @default(true)
  
  // Category toggles
  likesEnabled    Boolean  @default(true)
  commentsEnabled Boolean  @default(true)
  messagesEnabled Boolean  @default(true)
  remindersEnabled Boolean @default(true)
  eventsEnabled   Boolean  @default(true)
  systemEnabled   Boolean  @default(true)
  
  // Quiet hours (stored as "HH:MM" format in user's local time)
  quietHoursStart String?  // e.g., "22:00"
  quietHoursEnd   String?  // e.g., "07:00"
  quietHoursTimezone String? // e.g., "America/New_York"
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}

model NotificationCampaign {
  id            String   @id @default(cuid())
  title         String
  body          String
  deepLink      String?
  
  // Targeting
  targetType    String   // all, new_users, active_users, inactive_users, custom
  targetFilters Json?    // Custom filters for targeting
  
  // Scheduling
  scheduledAt   DateTime?
  sentAt        DateTime?
  
  // Status
  status        String   @default("draft") // draft, scheduled, sending, sent, failed, cancelled
  
  // Stats
  totalRecipients Int    @default(0)
  sentCount       Int    @default(0)
  failedCount     Int    @default(0)
  openedCount     Int    @default(0)
  
  // Metadata
  createdBy     String?  // Admin user ID
  metadata      Json?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([scheduledAt])
  @@index([createdAt])
}

// ==========================================
// QURAN READING SYSTEM
// ==========================================

model QuranBookmark {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  verseKey    String   // e.g., "2:255" for Ayatul Kursi
  chapterId   Int
  verseNumber Int
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, verseKey])
  @@index([userId, createdAt])
  @@index([chapterId])
}

model QuranLastRead {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapterId      Int
  verseNumber    Int
  verseKey       String   // e.g., "1:1"
  scrollPosition Float?
  updatedAt      DateTime @updatedAt

  @@index([userId])
}

model QuranReadingPreferences {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  translationId       Int      @default(131) // Default: Sahih International
  arabicFontSize      Int      @default(28)
  translationFontSize Int      @default(16)
  showTransliteration Boolean  @default(false)
  theme               String   @default("dark") // dark, light, sepia
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
}

// ==========================================
// MAKKAH LIVE CHANNELS
// ==========================================

enum ChannelType {
  YOUTUBE_LIVE  // YouTube live stream (embedded)
  TV_CHANNEL    // External TV channel website
}

enum ChannelCategory {
  MAKKAH        // Makkah live streams
  MADINAH       // Madinah live streams
  QURAN         // Quran TV channels
  ISLAMIC       // Islamic content channels
  NEWS          // Islamic news channels
  EDUCATIONAL   // Educational channels
}

model MakkahLiveChannel {
  id            String          @id @default(cuid())
  title         String
  titleArabic   String?
  subtitle      String?
  type          ChannelType
  category      ChannelCategory
  
  // For YouTube live streams
  youtubeId     String?         // YouTube video ID for embedding
  
  // For TV channels
  websiteUrl    String?
  
  // Display settings
  logo          String?         // Emoji or icon name
  thumbnailUrl  String?         // Optional thumbnail image URL
  
  // Order and visibility
  sortOrder     Int             @default(0)
  isActive      Boolean         @default(true)
  isFeatured    Boolean         @default(false)
  
  // Metadata
  createdBy     String?         // Admin user ID who created this
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([type, isActive])
  @@index([category, isActive])
  @@index([sortOrder])
}

// ==========================================
// EVENTS SYSTEM
// ==========================================

enum EventCategory {
  CONFERENCE
  SEMINAR
  WORKSHOP
  CELEBRATION
  PRAYER
  OTHER
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

model Event {
  id                  String        @id @default(cuid())
  title               String
  description         String
  location            String
  startDate           DateTime
  endDate             DateTime
  imageUrl            String?
  category            EventCategory @default(OTHER)
  status              EventStatus   @default(UPCOMING)
  isPublished         Boolean       @default(false)
  maxAttendees        Int?
  registrationRequired Boolean      @default(false)
  createdBy           String?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  @@index([startDate])
  @@index([status, isPublished])
  @@index([category])
}

// ==========================================
// NEWS SYSTEM
// ==========================================

enum NewsPriority {
  LOW
  MEDIUM
  HIGH
}

model NewsCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  nameArabic  String?
  description String?
  color       String?  // Hex color for UI display
  icon        String?  // Icon name or emoji
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive, sortOrder])
}

model News {
  id          String       @id @default(cuid())
  title       String
  content     String
  excerpt     String?
  imageUrl    String?
  category    String       @default("GENERAL") // Changed from enum to string to support custom categories
  priority    NewsPriority @default(MEDIUM)
  isPublished Boolean      @default(false)
  isFeatured  Boolean      @default(false)
  viewCount   Int          @default(0)
  createdBy   String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([isPublished, createdAt])
  @@index([category])
  @@index([priority])
}

// ==========================================
// SCHOLARS SYSTEM
// ==========================================

model Scholar {
  id          String   @id @default(cuid())
  name        String
  nameArabic  String?
  title       String?
  biography   String?
  imageUrl    String?
  birthYear   Int?
  deathYear   Int?
  location    String?
  specialty   String?
  isAlive     Boolean  @default(true)
  isPublished Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isPublished])
  @@index([sortOrder])
}

// ==========================================
// AZAN (ADHAN) SCHEDULES - Admin-managed, play at set times
// ==========================================

model AzanSchedule {
  id          String   @id @default(cuid())
  name        String   // e.g. "Makkah Al-Mukarramah"
  muezzin     String?  // e.g. "Sheikh Abdul Rahman Al-Sudais"
  location    String?  // e.g. "Masjid al-Haram, Makkah"
  description String?  @db.Text
  audioUrl    String   // URL to audio file (required for playback)
  playAt      String   // Time in 24h "HH:mm" (e.g. "05:30") - when to play daily
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([sortOrder])
}